<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sripad.notes">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".application.NotesApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name=".splash.SplashActivity"
            android:noHistory="true"
            android:theme="@style/SplashScreenTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity android:name=".home.HomeActivity"/>

        <activity android:name=".note.create.CreateNoteActivity"/>

        <activity android:name=".note.view.ViewNoteActivity"/>

        <activity android:name=".note.edit.EditNoteActivity"/>

    </application>

</manifest>